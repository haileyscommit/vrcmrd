{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "vrcmrd",
  "version": "0.1.0",
  "identifier": "com.system32labs.vrcmrd",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "VRCMRD (Idle)",
        "width": 800,
        "height": 600,
        "url": "src/entrypoints/index.html"
      },
      {
        "label": "settings",
        "title": "Settings - VRCMRD",
        "width": 600,
        "height": 400,
        "create": false,
        "url": "src/entrypoints/settings.html"
      },
      {
        "label": "advisories",
        "title": "Manage Advisories",
        "width": 800,
        "height": 600,
        "create": false,
        "url": "src/entrypoints/advisories.html"
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
